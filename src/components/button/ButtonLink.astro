---
const { buttonText, ButtonHref } = Astro.props;
---

<a href={ButtonHref} class="c-button-top">{buttonText}</a>

<style lang="scss">
  @use '../../styles/breakpoints' as *;

  .c-button-top {
    display: inline-flex;
    align-items: center;
    gap: 36px;
    padding: 4px 18px 4px 20px;
    border-radius: 10px;
    border: 1px solid;
    background-color: #fff;
    font-size: 14px;
    font-weight: 700;
    line-height: calc(30 / 14);


    &::after {
      content: "";
      width: 13px;
      height: 11px;
      background-image: url(/assets/images/global/icon-arrow-right.svg);
      background-repeat: no-repeat;
      background-size: contain;
      background-position: center center;
      filter: invert(34%) sepia(63%) saturate(339%) hue-rotate(347deg) brightness(99%) contrast(93%);
    }
  }

  @media (any-hover: hover) {
    .c-button-top {
      transition: background-color .3s ease;

      &::after {
        transition: translate .3s ease;
      }

      &:hover {
        background-color: var(--color-btn-hover);

        &::after {
          translate: 3px;
        }
      }
    }
  }
</style>
