<style lang="scss">
  @use '../../styles/breakpoints' as *;

  .life-timetable {
    padding-bottom: 63px;
  }

  // SP
  .life-timetable-sp-list {
    display: grid;
    gap: 20px;
  }

  .life-timetable-sp-item {
    display: flex;
    gap: 25px;
    padding-left: 6px;
    position: relative;

    &::before {
      content: "";
      width: 2px;
      height: 420px;
      background-color: #fdddd1;
      position: absolute;
      top: 40px;
      left: 39px;
      z-index: -1;
    }

    &:nth-child(6) {
      &::before {
        display: none;
      }
    }

    &:last-child {
      &::before {
        top: calc(40px - 100%);
      }

      &::after {
        content: "";
        width: 4px;
        height: 150px;
        background-color: var(--color-base);
        position: absolute;
        top: 80px;
        left: 38px;
      }
    }
  }

  .life-timetable-sp-time {
    flex: 0 0 69px;
    display: grid;
    place-items: center;
    height: 80px;
    padding-left: .2em;
    background-color: var(--color-pink);
    color: #fff;
    font-weight: 700;
    letter-spacing: .2em;
    line-height: 1.5;
    clip-path: polygon(50% 0, 100% 25%, 100% 75%, 50% 100%, 0 75%, 0 25%);

    &--even {
      background-color: var(--color-yellow);
    }
  }

  .life-timetable-sp-title {
    color: var(--color-pink);
    font-size: 16px;
    font-weight: 700;
    letter-spacing: .2em;
    line-height: 1.5;

    &--even {
      color: var(--color-yellow);
    }
  }

  .life-timetable-sp-text {
    margin-top: 5px;

    span {
      display: block;
    }
  }

  .life-timetable-sp-image {
    margin-top: 10px;
  }

  // PC
  .life-timetable-pc-list {
    display: none;
  }

  @include mq() {
    .life-timetable {
      padding-bottom: 100px;
    }

    // SP
    .life-timetable-sp-list {
      display: none;
    }

    // PC
    .life-timetable-pc-list {
      display: grid;
      gap: 60px;
      max-width: 700px;
      margin-right: auto;
      margin-left: auto;
    }

    .life-timetable-pc-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: relative;

      &:nth-child(even) {
        flex-direction: row-reverse;
      }

      &::before {
        content: "";
        width: 2px;
        height: 260px;
        margin: auto;
        background-color: #fdddd1;
        position: absolute;
        top: 40px;
        left: 0;
        right: 0;
        z-index: -1;
      }

      &:nth-child(6) {
        &::before {
          display: none;
        }
      }

      &:last-child {
        &::before {
          top: -100%;
        }

        &::after {
          content: "";
          width: 4px;
          height: 50px;
          margin: auto;
          background-color: var(--color-base);
          position: absolute;
          top: 130px;
          right: 0;
          left: 0;
        }
      }
    }

    .life-timetable-pc-description {
      flex: 0 0 270px;
    }

    .life-timetable-pc-title {
      color: var(--color-pink);
      font-size: 20px;
      font-weight: 700;
      letter-spacing: .2em;
      line-height: 1.5;

      &--even {
        color: var(--color-yellow);
      }
    }

    .life-timetable-pc-text {
      margin-top: 10px;
    }

    .life-timetable-pc-time {
      flex: 0 0 86px;
      display: grid;
      place-items: center;
      height: 100px;
      padding-left: .2em;
      background-color: var(--color-pink);
      color: #fff;
