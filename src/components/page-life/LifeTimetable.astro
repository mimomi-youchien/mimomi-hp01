      font-weight: 700;
      letter-spacing: .2em;
      line-height: 1.5;
      clip-path: polygon(50% 0, 100% 25%, 100% 75%, 50% 100%, 0 75%, 0 25%);

      &--even {
        background-color: var(--color-yellow);
      }
    }

    .life-timetable-pc-image {
      flex: 0 0 270px;
    }
  }
</style>
