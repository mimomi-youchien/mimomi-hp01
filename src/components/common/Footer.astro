  </div><!-- /.footer-container.l-container -->

  <!-- トップへ戻るボタン -->
  <a href="#" class="footer-to-page-top" aria-label="ページトップへ戻る">
    <img src="/assets/images/global/icon-to-page-top.svg" alt="" loading="lazy" decoding="async" width="22" height="12">
    <span aria-disabled="true">トップ</span>
  </a><!-- /.to-page-top -->

  <div class="l-container">
    <div class="footer-copyright footer-copyright--pc">
      <small aria-label="著作権 2025 学校法人飯生学園みもみ幼稚園">&copy;2025 学校法人飯生学園みもみ幼稚園 All Rights Reserved.</small>
    </div><!-- /.footer-copyright -->
  </div><!-- /.l-container -->
</footer><!-- /.footer -->

<style lang="scss">
  @use '../../styles/breakpoints' as *;

  .footer {
    padding-top: 40px;
    height: 325px;
    font-size: clamp(11px, calc(12 var(--vw-sp)), 12px);
    line-height: 1.5;
    position: relative;
    overflow: hidden;

    &::before {
      content: "";
      width: 800px;
      height: 325px;
      background-image: url(/assets/images/global/bg-footer-sp@2x.webp);
      background-repeat: no-repeat;
      background-size: contain;
      background-position: center center;
      position: absolute;
      top: 0;
      left: 50%;
      z-index: -1;
      translate: -50%;
    }
  }

  .footer-container {
    width: fit-content;
  }

  .footer-logo {
    max-width: 84px;
  }

  .footer-location {
    margin-top: 8px;
  }

  .footer-tel {
    width: fit-content;

    a {
      display: flex;
      align-items: center;
      gap: 5px;
      padding: 5px 0;
      font-size: 12px;
      font-weight: 700;

      &::before {
        content: "";
        width: 12px;
        height: 12px;
        background-image: url(/assets/images/global/icon-phone-brown.svg);
        background-repeat: no-repeat;
        background-size: contain;
      }
    }
  }

  .footer-line {
    margin-top: 5px;
  }

  .footer-line-text {
    display: grid;
  }

  .footer-line-link {
    display: flex;
    gap: 10px;
    gap: calc(10 var(--vw-sp));
    margin-top: 8px;
  }

  .footer-privacy-policy {
    a {
      display: block;
      width: fit-content;
      padding: 5px 0;
      margin-top: 3px;
      font-size: 10px;
    }
  }

  .footer-nav {
    display: none;
  }

  .footer-copyright {
    &--pc {
      display: none;
    }

    small {
      font-size: 10px;
    }
  }

  .footer-to-page-top {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 5px;
    width: fit-content;
    font-size: 12px;
    font-weight: 700;
    line-height: 1.5;
    position: absolute;
    top: 39px;
    right: calc(27 var(--vw-sp));

    @include mq() {
      top: 74px;
      right: 40px;
    }

    img {
      width: 22px;
    }
  }

  @include mq() {
    .footer {
      padding-top: 60px;
      height: 480px;

      &::before {
        width: 1200px;
        height: 480px;
        background-image: url(/assets/images/global/bg-footer-tb@2x.webp);
      }
    }

    .footer-container {
      width: 100%;
      padding: 0 calc(80 / 768 * 100vw);
    }

    .footer-info {
      font-size: 14px;
    }

    .footer-logo {
      max-width: 172px;
    }

    .footer-location {
      margin-top: 20px;
    }

    .footer-tel {
      a {
        gap: 10px;
        font-size: 16px;

        &::before {
          width: 16px;
          height: 16px;
        }
      }
    }

    .footer-line {
      margin-top: 15px;
    }

    .footer-line-link {
      gap: 24px;
    }

    .footer-privacy-policy {
      a {
        font-size: 12px;
      }
    }

    .footer-copyright {
      small {
        font-size: 12px;
      }
    }
  }

  @media screen and (min-width: 1025px) {
    // タブレット横向き(1024px)まで電話発信有効
    .footer-tel {
      text-decoration: none;
      pointer-events: none;
      cursor: default;
    }
  }

  @media screen and (min-width: 1030px) {
    .footer {
      padding-top: 122px;
      height: 590px;

      &::before {
        width: 2000px;
        height: 590px;
        background-image: url(/assets/images/global/bg-footer-pc@2x.webp);
      }
    }

    .footer-container {
      display: flex;
      justify-content: space-between;
      width: 100%;
      padding: 0 40px;
    }

    .footer-info {
      font-size: 12px;
      margin-top: 5px;
    }

    .footer-line-link {
      gap: 20px;
    }

    .footer-privacy-policy {
      display: none;
    }

    .footer-nav {
      display: block;
    }

    .footer-nav-list {
      display: flex;
      gap: 40px;
      font-size: 14px;

      a {
        display: block;
        padding: 5px 0;
      }
    }

    .footer-nav-group {
      &:first-child {
        display: flex;
        gap: 40px;
      }

      &:last-child {
        display: grid;
        gap: 10px;
      }
    }

    .footer-nav-item {
      & > a {
        font-weight: 700;
      }

      a span {
        display: none;

        @media screen and (min-width: 1120px) {
          display: inline;
        }
      }
    }

    .footer-sub-menus {
      display: grid;
      gap: 10px;
      margin-top: 10px;
    }

    .footer-copyright {
      &--sp {
        display: none;
      }

      &--pc {
        display: block;
        margin-top: 15px;
        text-align: right;
      }

      small {
        font-size: 12px;
      }
    }

    .footer-to-page-top {
      display: none;
    }
  }

  @media (any-hover: hover) {
    .footer-nav-item a,
    .footer-sub-menus-item a {
      transition: color .3s ease;

      &:hover {
        color: #65472d;
      }
    }
  }
</style>
