---
// props でアクティブなカテゴリー名を受け取る
const { activeCategory } = Astro.props;

const categories = [
  { name: "すべて", slug: "/otayori/1" },
  { name: "年少クラス", slug: "/otayori/category/first-year/1" },
  { name: "年中クラス", slug: "/otayori/category/second-year/1" },
  { name: "年長クラス", slug: "/otayori/category/third-year/1" },
];
---

<ul class="c-otayori-category-list">
  {categories.map(category => (
    <li class="c-otayori-category-list-item">
      <a
        href={category.slug}
        class={`u-uppercase ${activeCategory === category.name ? "is-active" : ""}`}
      >
        {category.name}
      </a>
    </li>
  ))}
</ul>

<style lang="scss">
  @use '../../styles/breakpoints' as *;

  .c-otayori-category-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 10px;
    max-width: 200px;
    margin: auto;
  }

  .c-otayori-category-list-item {
    a {
      display: grid;
      place-items: center;
      width: 90px;
      height: 22px;
      border-radius: 3px;
      border: 1px solid currentColor;
      line-height: 1;

      &.is-active {
        color: var(--color-base);
        border-color: var(--color-blue);
        background-color: var(--color-blue);
      }
    }
  }

  @include mq() {
    .c-otayori-category-list {
      gap: 0;
      max-width: 560px;
      margin: auto;
    }

    .c-otayori-category-list-item {
      a {
        width: 110px;
        height: 26px;
        font-size: 14px;
      }
    }
  }

  @media (any-hover: hover) {
    .c-otayori-category-list-item {
      a {
        transition: color .3s ease, border-color .3s ease, background-color .3s ease;

        &:hover {
          color: var(--color-base);
          border-color: var(--color-blue);
          background-color: var(--color-blue);
        }
      }
    }
  }
</style>
